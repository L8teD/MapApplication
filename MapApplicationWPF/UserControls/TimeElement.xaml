<UserControl x:Class="MapApplicationWPF.UserControls.TimeElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MapApplicationWPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Visibility="{Binding sp_Visibility}">
        <TextBlock Text="{Binding Text}" FontSize="16" VerticalAlignment="Center" Margin="0"></TextBlock>
        <Label Content="{Binding TimeOperationName}" FontSize="16" BorderThickness="1" BorderBrush="AliceBlue"
               VerticalAlignment="Center" Margin="0,3"></Label>
    </StackPanel>
</UserControl>
