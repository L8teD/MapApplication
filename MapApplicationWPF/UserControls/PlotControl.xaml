<UserControl x:Class="MapApplicationWPF.UserControls.PlotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MapApplicationWPF.UserControls"
             mc:Ignorable="d" 
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4.5*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <local:Plot x:Name="plot"></local:Plot>
        <ListBox x:Name="lb_PlotTitles" Grid.Column="1" SelectionChanged="lb_PlotTitles_SelectionChanged"></ListBox>

    </Grid>
</UserControl>
