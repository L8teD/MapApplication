<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Border}" x:Key="Border_Style">
        <Setter Property="BorderBrush" Value="Black"></Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
        <Setter Property="Margin" Value="0"></Setter>
        <Setter Property="Background" Value="#FFBFCBF3"></Setter>
    </Style>
    <Style TargetType="{x:Type Border}" x:Key="Border_Style_outside">
        <Setter Property="BorderBrush" Value="Black"></Setter>
        <Setter Property="BorderThickness" Value="3"></Setter>
        <Setter Property="Margin" Value="10"></Setter>
        <Setter Property="Background" Value="#FF72BEFF"></Setter>
    </Style>
    <Style TargetType="{x:Type Border}" x:Key="Border_Style_inside">
        <Setter Property="BorderBrush" Value="Black"></Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
        <Setter Property="Margin" Value="0"></Setter>
        <Setter Property="Background" Value="#FFBFCBF3"></Setter>
    </Style>
</ResourceDictionary>