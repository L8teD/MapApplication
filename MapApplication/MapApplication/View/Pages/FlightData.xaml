<Page x:Class="MapApplication.View.FlightData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:v="clr-namespace:MapApplication.View"
      xmlns:vm="clr-namespace:MapApplication.ViewModel"
      d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FlightData">

    <Grid Background="#FF72BEFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.1*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <v:DataTable>
            <ContentControl Content="{Binding IdealDataTable}"></ContentControl>
        </v:DataTable>
        <v:DataTable Grid.Column="1">
            <ContentControl Content="{Binding ErrorDataTable}"></ContentControl>
        </v:DataTable>
        <v:DataTable Grid.Column="2">
            <ContentControl Content="{Binding EstimateDataTable}"></ContentControl>
        </v:DataTable>
    </Grid>
</Page>
