<UserControl x:Class="MapApplication.View.Legend"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MapApplication.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <local:LegendElement>
                <ContentControl Content="{Binding legendBtn1}"></ContentControl>
            </local:LegendElement >
            <local:LegendElement>
                <ContentControl Content="{Binding legendBtn2}"></ContentControl>
            </local:LegendElement>
            <local:LegendElement>
                <ContentControl Content="{Binding legendBtn3}"></ContentControl>
            </local:LegendElement>
            <local:LegendElement>
                <ContentControl Content="{Binding legendBtn4}"></ContentControl>
            </local:LegendElement>
            <local:LegendElement>
                <ContentControl Content="{Binding legendBtn5}"></ContentControl>
            </local:LegendElement>
        </StackPanel>
    </Grid>
</UserControl>
