<UserControl x:Class="DebugApp.UserControls.Plot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DebugApp.UserControls"
             xmlns:global="clr-namespace:DebugApp"
             xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
             d:DataContext="{d:DesignInstance Type=global:PlotViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Gray" BorderThickness="1">
        <Grid Margin="2">
            <oxy:PlotView Model="{Binding MyPlotModel}" Controller="{Binding MyPlotController}">
            </oxy:PlotView>
            <Button x:Name="btn_Home" HorizontalAlignment="Right" VerticalAlignment="Top" Height="30" Width="30" Command="{Binding Cmd_Home}">
                <Image Source="pack://application:,,,/Resources/dog-house.png" Stretch="Fill"></Image>
            </Button>
        </Grid>

    </Border>
</UserControl>
